{
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",
    
    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "outDir": "build",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,

    /* TypeORM related options */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "src/**/*.spec.ts"
  ]
}
